                "order": 1,
                "dependency": {
                  "on": "pricingmodel",
                  "is": "Reserved",
                  "notShow": true
                }
              }
            ]
          },
          {
            "order": 7,
            "fields": [
              {
                "controlType": "textbox",
                "key": "auroraCapacity",
                "label": "Number of Aurora Capacity Units (ACUs)",
