                "order": 1,
                "dependency": {},
                "dependents": ["term", "purchaseoption", "auroraCapacity"]
              }
            ]
          },
          {
            "order": 5,
            "fields": [
              {
                "controlType": "dropdown",
                "key": "term",
                "label": "Term",
                "options": [
                  { "key": "1yr", "value": "1yr" },
                  { "key": "3yr", "value": "3yr" }
                ],
                "order": 1,
                "dependency": {
                  "on": "pricingmodel",
